<?xml version="1.0" encoding="UTF-8"?>

    <LinearLayout android:theme="@style/AppTheme" android:layout_weight="1" android:background="@android:color/transparent" android:layout_height="match_parent" android:layout_width="match_parent" android:orientation="horizontal" xmlns:android="http://schemas.android.com/apk/res/android">


    <TableLayout android:background="@color/background_material_light" android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/tableLayout1">


    <TableRow android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/tableRow1">

    <Spinner android:layout_weight=".50" android:background="@color/wikitude_orange_light" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/cameraPosition"/>

    <Spinner android:layout_weight=".50" android:background="@color/wikitude_orange_light" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/focusMode" android:layout_gravity="center"/>

</TableRow>


    <TableRow android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/tableRow2">

    <EditText android:layout_weight=".25" android:background="#00000000" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_marginLeft="10dp" android:layout_marginStart="10dp" android:text="@string/camera_control_flash" android:editable="false"/>

    <Switch android:layout_weight=".75" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/flashlight" android:layout_gravity="left"/>

</TableRow>


    <TableRow android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/tableRow3">

    <EditText android:layout_weight=".25" android:background="#00000000" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_marginLeft="10dp" android:layout_marginStart="10dp" android:text="@string/camera_control_zoom" android:editable="false"/>

    <SeekBar android:layout_weight=".75" android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/zoomSeekBar"/>

</TableRow>

</TableLayout>

</LinearLayout>
